# Evolution API Configuration
# Copy this file to .env and fill in your actual values

# Evolution API Configuration
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-api-key-here

# Fixed admin credentials (single account)
PANEL_ADMIN_USER=admin
PANEL_ADMIN_PASSWORD=ChangeMeNow123

# API Configuration
API_TIMEOUT=10
PAIRING_CODE_TTL_SECONDS=45
DEEP_LINK_DEFAULT_TTL_SECONDS=604800

# Deep Link Configuration (QR only)
# Optional public URL used when generating links inside panel.
# Example: https://painel.suaempresa.com
PANEL_PUBLIC_BASE_URL=
# Optional secret for signing deep links. If empty, cache HMAC key is used.
DEEP_LINK_SECRET=

# Database Configuration
DB_PATH=/var/www/chamalead/panel/data/panel.db

# Session Configuration
SESSION_TIMEOUT=1800

# Rate Limiting
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_WINDOW=900

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_PATH=/var/www/chamalead/panel/data/cache

# Security
HMAC_SECRET=change-this-to-random-string

# Backup
BACKUP_INTERVAL=86400
BACKUP_RETENTION=10

# Logging
LOG_LEVEL=info
LOG_PATH=/var/www/chamalead/panel/data/logs

# Development
DEBUG=false
